<Styles 
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style Selector="Border.GlassCard">
    <Setter Property="Background" Value="#08FFFFFF" /> 
    <Setter Property="BorderBrush" Value="#14FFFFFF" /> 
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="16"/> 
  </Style>

  <Style Selector="TextBlock.ScreenTitle">
    <Setter Property="FontSize" Value="20"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="{StaticResource Sky400Brush}"/>
  </Style>

  <Style Selector="TextBlock.H1">
    <Setter Property="FontSize" Value="20"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="{StaticResource Sky400Brush}"/>
  </Style>

  <Style Selector="TextBlock.ExerciseTitle">
    <Setter Property="FontSize" Value="40"/> <Setter Property="FontWeight" Value="ExtraBold"/>
    <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
    <Setter Property="TextAlignment" Value="Center"/>
  </Style>

  <Style Selector="TextBlock.MutedText">
    <Setter Property="Foreground" Value="{StaticResource Slate300Brush}"/>
    <Setter Property="FontSize" Value="14"/>
  </Style>
  
  <Style Selector="TextBlock.SmallMutedText">
    <Setter Property="Foreground" Value="{StaticResource Slate400Brush}"/>
    <Setter Property="FontSize" Value="12"/>
  </Style>

  <Style Selector="TextBlock.FormCueTitle">
    <Setter Property="Foreground" Value="{StaticResource Slate300Brush}"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="TextAlignment" Value="Center"/>
  </Style>

  <Style Selector="TextBlock.FormCueItem">
    <Setter Property="Foreground" Value="{StaticResource Slate400Brush}"/>
    <Setter Property="FontSize" Value="12"/>
  </Style>

  <Style Selector="Button.Primary">
    <Setter Property="Background" Value="{StaticResource Sky500Brush}"/>
    <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
    <Setter Property="FontSize" Value="18"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Padding" Value="16 14"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="Cursor" Value="Hand"/>
  </Style>

  <Style Selector="Button.Secondary">
    <Setter Property="Background" Value="{StaticResource TransparentBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource Slate300Brush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource Slate600Brush}"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Padding" Value="12 10"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="Cursor" Value="Hand"/>
  </Style>
</Styles>
