<UserControl 
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
  x:Class="GetFitterGetBigger.Views.SplashView">
  
  <Grid RowDefinitions="100 Auto 40 20 20 *">
    <Image 
      Grid.Row="1" 
      Source="avares://GetFitterGetBigger/Assets/GetBiggerGetFitter_Logo.png"
      Width="350"
      Height="350"
      HorizontalAlignment="Center"
      VerticalAlignment="Top" />

    <TextBlock 
      Grid.Row="2" 
      Text="Loading"
      FontSize="24"
      VerticalAlignment="Center"
      HorizontalAlignment="Center" />

    <TextBlock 
      Grid.Row="3" 
      Text="100%"
      FontWeight="Bold"
      FontSize="18"
      VerticalAlignment="Center"
      HorizontalAlignment="Center" />

    <TextBlock 
      Grid.Row="4" 
      Text="All modules initialized"
      FontSize="12"
      VerticalAlignment="Center"
      HorizontalAlignment="Center" />
      
  </Grid>

</UserControl>
