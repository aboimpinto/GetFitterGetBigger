@page "/"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Dashboard - GetFitterGetBigger Admin</PageTitle>

<div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Welcome to GetFitterGetBigger Admin</h2>
    <p class="text-gray-600 mb-4">
        This dashboard provides tools for managing exercises, workouts, and training plans for your clients.
    </p>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
        <div class="bg-blue-50 p-4 rounded-lg border border-blue-100">
            <div class="flex items-center mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
                <h3 class="text-lg font-medium text-gray-800">Exercises</h3>
            </div>
            <p class="text-gray-600 mb-3">Create and manage your exercise library.</p>
            <a href="/exercises" class="text-blue-600 hover:text-blue-800 font-medium">Manage Exercises →</a>
        </div>
        <div class="bg-green-50 p-4 rounded-lg border border-green-100">
            <div class="flex items-center mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                <h3 class="text-lg font-medium text-gray-800">Workouts</h3>
            </div>
            <p class="text-gray-600 mb-3">Design effective workout routines.</p>
            <a href="/workouts" class="text-green-600 hover:text-green-800 font-medium">Manage Workouts →</a>
        </div>
        <div class="bg-purple-50 p-4 rounded-lg border border-purple-100">
            <div class="flex items-center mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <h3 class="text-lg font-medium text-gray-800">Training Plans</h3>
            </div>
            <p class="text-gray-600 mb-3">Create comprehensive training plans.</p>
            <a href="/plans" class="text-purple-600 hover:text-purple-800 font-medium">Manage Plans →</a>
        </div>
    </div>
</div>

<div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Quick Stats</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-gray-50 p-4 rounded-lg border border-gray-100">
            <div class="text-2xl font-bold text-gray-800">42</div>
            <div class="text-sm text-gray-500">Exercises</div>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg border border-gray-100">
            <div class="text-2xl font-bold text-gray-800">18</div>
            <div class="text-sm text-gray-500">Workouts</div>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg border border-gray-100">
            <div class="text-2xl font-bold text-gray-800">7</div>
            <div class="text-sm text-gray-500">Training Plans</div>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg border border-gray-100">
            <div class="text-2xl font-bold text-gray-800">15</div>
            <div class="text-sm text-gray-500">Clients</div>
        </div>
    </div>
</div>
