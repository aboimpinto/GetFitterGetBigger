@* Loading skeleton for WorkoutTemplateForm *@

<div class="animate-pulse">
    <div class="bg-white rounded-lg shadow-md p-6">
        <!-- Form title -->
        <div class="h-8 bg-gray-300 rounded w-64 mb-6"></div>
        
        <!-- Basic Information Section -->
        <div class="mb-8">
            <div class="h-6 bg-gray-200 rounded w-48 mb-4"></div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                @* Name field *@
                <div>
                    <div class="h-4 bg-gray-200 rounded w-24 mb-2"></div>
                    <div class="h-10 bg-gray-100 rounded w-full"></div>
                </div>
                
                @* Category field *@
                <div>
                    <div class="h-4 bg-gray-200 rounded w-24 mb-2"></div>
                    <div class="h-10 bg-gray-100 rounded w-full"></div>
                </div>
                
                @* Description field *@
                <div class="md:col-span-2">
                    <div class="h-4 bg-gray-200 rounded w-32 mb-2"></div>
                    <div class="h-24 bg-gray-100 rounded w-full"></div>
                </div>
            </div>
        </div>
        
        <!-- Training Parameters Section -->
        <div class="mb-8">
            <div class="h-6 bg-gray-200 rounded w-48 mb-4"></div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                @for (int i = 0; i < 3; i++)
                {
                    <div>
                        <div class="h-4 bg-gray-200 rounded w-32 mb-2"></div>
                        <div class="h-10 bg-gray-100 rounded w-full"></div>
                    </div>
                }
            </div>
        </div>
        
        <!-- Settings Section -->
        <div class="mb-8">
            <div class="h-6 bg-gray-200 rounded w-32 mb-4"></div>
            <div class="space-y-4">
                @for (int i = 0; i < 2; i++)
                {
                    <div class="flex items-center gap-3">
                        <div class="h-5 w-5 bg-gray-200 rounded"></div>
                        <div class="h-4 bg-gray-200 rounded w-48"></div>
                    </div>
                }
            </div>
        </div>
        
        <!-- Auto-save indicator placeholder -->
        <div class="h-4 bg-gray-100 rounded w-32 mb-6"></div>
        
        <!-- Form buttons -->
        <div class="flex gap-4">
            <div class="h-10 bg-gray-200 rounded w-24"></div>
            <div class="h-10 bg-gray-200 rounded w-24"></div>
        </div>
    </div>
</div>